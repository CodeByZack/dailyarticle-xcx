/* pages/comment.wxss */
.comment-wrapper{
  position: fixed;
  width: 100vw;
  height: 100vh;
  top: 0px;
  background-color: #ffffff;
}

.comment-wrapper .list{
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 20rpx;
  overflow: scroll;
  padding-bottom: 100rpx;
}

.comment-wrapper .list .item{
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 30rpx;
  padding-top: 30rpx;

}

.comment-wrapper .list .item .name{
  font-size: 25rpx;
  float: left;
  color: #767676;
}

.comment-wrapper .list .item .time{
  font-size: 25rpx;
  float: right;
  color: #767676;
}

.comment-wrapper .list .item .content{
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #767676;
}
.comment-wrapper .input-container{
  display: flex;
  width: 100%;
  height: 100rpx;
  background-color: #fafafa;
  padding-left: 20rpx;
  padding-right: 20rpx;
  position: absolute;
  bottom: 0;
}

.comment-wrapper .input-container .input-wrapper{
  flex: 1;
}

.comment-wrapper .input-container .input-wrapper .input{
  line-height: 100rpx;
  height: 100rpx;
  font-size: 30rpx;
}
.comment-wrapper .input-container .input-btn{
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  padding-right: 40rpx; 
  color: #767676;
}

.comment-wrapper .get-info{
  position: absolute;
  background-color: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 100%;
  top: 0;
}

.comment-wrapper .get-info button{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 500rpx;
  height: 100rpx;
  margin-top: 20rpx;
  color: #999999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}