.item {
  margin: 50rpx;
  position: relative;
}
.item .image {
  border-radius: 10rpx;
  width: 651rpx;
  height: 325rpx;
}
.item .text-bk {
  width: 100%;
  position: absolute;
  bottom: 10rpx;
  height: 120rpx;
  background-color: #9993;
  border-radius: 10rpx;
  text-align: right;
  color: #f2f2f2f1;
  padding: 10rpx 40rpx;
  box-sizing: border-box;
}
.item .title {
  display: block;
  font-size: 35rpx;
}
.item .author {
  display: block;
  padding-top: 10rpx;
  font-size: 25rpx;
}
